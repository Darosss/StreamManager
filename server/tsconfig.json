{
  "compilerOptions": {
    "paths": {
      "@libs/*": ["../../libs/*"],
      "@routes/*": ["routes/*"],
      "@controllers/*": ["controllers/*"],
      "@configs/*": ["configs/*"],
      "@middlewares/*": ["middlewares/*"],
      "@models/*": ["models/*"],
      "@services/*": ["services/*"],
      "@types/*": ["@types/*"],
      "@utils/*": ["utils/*"]
    },
    "target": "es2017",
    "module": "commonjs",
    "baseUrl": "./src",
    "rootDir": "./src",
    "resolveJsonModule": true,
    "allowJs": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
