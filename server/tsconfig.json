{
  "compilerOptions": {
    "paths": {
      "@controllers": ["controllers"],
      "@configs": ["configs"],
      "@middlewares": ["middlewares"],
      "@models": ["models"],
      "@services": ["services"],
      "@utils": ["utils"],
      "@defaults": ["defaults"],
      "@tests": ["tests"],
      "@socket": ["socketIO"]
    },
    "target": "es2022",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "baseUrl": "./src",
    "rootDir": "./src",
    "resolveJsonModule": true,
    "allowJs": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "noImplicitOverride": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
